<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Imagen del videojuego -->
        <ImageView
            android:id="@+id/imgGame"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="Imagen del juego"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder_game" />

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <!-- Título del juego -->
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título del juego"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <!-- Fecha de lanzamiento -->
            <TextView
                android:id="@+id/textReleaseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Lanzamiento: 2024-01-01"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

            <!-- Plataformas -->
            <TextView
                android:id="@+id/textPlatforms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Plataformas: PC, PS5"
                android:textSize="14sp"
                android:textColor="@android:color/black" />

            <!-- Géneros -->
            <TextView
                android:id="@+id/textGenres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Géneros: Action, RPG"
                android:textSize="14sp"
                android:textColor="@android:color/black" />

            <!-- Rating -->
            <TextView
                android:id="@+id/textRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Rating: 4.5"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
